{
	"compilerOptions": {
		"target": "es6",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true, 
		"forceConsistentCasingInFileNames": true,
		"module": "CommonJS",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"jsx": "react",
		"outDir": "dist",
		"declaration": true,
	},
	"include": [
		"src/**/*"
	]
}
  